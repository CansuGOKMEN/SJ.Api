@model Dictionary<string, List<Result>>
@{
    ViewData["Title"] = "Home Page";
}


<div class="animatedParent animateOnce">
    <div class="container-fluid my-3">
        <div class="row">
            <div class="col-md-7">
                <div class="card">
                    <div class="card-body b-b">
                        <form id="getAll" method="post">
                            @Html.AntiForgeryToken()
                            <div class="form-group col-md-6">
                                <label for="productNo" class="col-form-label">Ürün No </label>
                                <input type="text" name="ProductNo" class="form-control" id="productNo" required>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="proposalNo" class="col-form-label">Teklif No</label>
                                <input type="text" name="ProposalNo" class="form-control" id="proposalNo" required>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="renewalNo" class="col-form-label">Yenileme No</label>
                                <input type="text" name="RenewalNo" class="form-control" id="renewalNo" required>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="endorsNo" class="col-form-label">Zeyil No</label>
                                <input type="text" name="EndorsNo" class="form-control" id="endorsNo" required>
                            </div>
                            <button type="submit" class="btn btn-primary">Sorgula</button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-md-5">

            </div>
        </div>
    </div>
</div>
@if (Model != null)
{
    <div class="col-md-12">
        <div class="card no-b">
            <div class="card-body">
                <div class="card-title">Results</div>
                <div class="col-md-4">
                    <table id="table" data-toggle="table" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th data-align="center"  colspan="2">Olumlu</th>

                            </tr>
                            <tr>
                                <th>Kod</th>
                                <th>Açıklama</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.ContainsKey("1"))
                            {
                                @foreach (var item in Model["1"])
                                {
                                    <tr>
                                        <td data-title="bootstrap table">
                                            @item.Code
                                        </td>
                                        <td data-i18n="Description">
                                            @item.Description
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
                <div class="col-md-4">
                    <table id="table" data-toggle="table" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th data-align="center" colspan="2">Bilgi</th>

                            </tr>
                            <tr>
                                <th>Kod</th>
                                <th>Açıklama</th>
                            </tr>
                        </thead>
                        <tbody>

                            @if (Model.ContainsKey("2"))
                            {
                                @foreach (var item in Model["2"])
                                {
                                    <tr>
                                        <td data-title="bootstrap table">
                                            @item.Code
                                        </td>
                                        <td data-i18n="Description">
                                            @item.Description
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
                <div class="col-md-4">
                    <table id="table" data-toggle="table" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th data-align="center" colspan="2">Olumsuz</th>
                            </tr>
                            <tr>
                                <th>Kod</th>
                                <th>Açıklama</th>
                            </tr>
                        </thead>
                        <tbody>

                            @if (Model.ContainsKey("3"))
                            {
                                @foreach (var item in Model["3"])
                                {
                                    <tr>
                                        <td data-title="bootstrap table">
                                            @item.Code
                                        </td>
                                        <td data-i18n="Description">
                                            @item.Description
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
}

@section Scripts{
    <script>
        $('#table').bootstrapTable({});
    </script>
}
